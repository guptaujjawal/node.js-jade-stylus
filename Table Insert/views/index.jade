doctype html
h3 REGISTER_USER
  form(action='/register_user', method='POST')
    | name :
    input(type='text', name='name')
    | email :
    input(type='text', name='email')
    | password :
    input(type='text', name='password')
    input(type='submit', value='submit')

h3 PICKUP_ADDRESS
  form(action='/pickupaddr', method='POST')
    | user_access_token :
    input(type='text', name='accesstoken')
    | address :
    input(type='text', name='address')
    | pickup_lat :
    input(type='text', name='pickuplat')
    | pickup_long :
    input(type='text', name='pickuplong')
    input(type='submit', value='submit')

h3 DELIVERY_ADDRESS
  form(action='/deliveryaddr', method='POST')
