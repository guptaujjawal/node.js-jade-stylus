h3 ORDERS
  form(action='/orders', method='POST')
    | order_id :
    input(type='text', name='orderid')
    | pickup_id :
    input(type='text', name='pickupid')
    | delivery_id :
    input(type='text', name='deliveryid')
    | order_details :
    input(type='text', name='orderdetails')
    | special_instruction:
    input(type='text', name='specialinstruction')
    | recepient_name :
    input(type='text', name='recepientname')
    | delivery_address :
    input(type='text', name='deliveryaddress')
    | delivery_lat :
    input(type='text', name='deliverylat')
    | delivery_long :
    input(type='text', name='deliverylong')
